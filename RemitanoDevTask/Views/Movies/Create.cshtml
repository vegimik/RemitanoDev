@model RemitanoDevTask.ViewModels.MovieViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-10 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    Share a Youtube Movie
                </div>
                <form asp-action="Create">
                    <div class="form-group row">
                        @*<label for="inputEmail3" class="col-sm-2 col-form-label card-text">Share a Youtube Movie</label>*@
                        <label asp-for="VideoUrl" class="col-sm-3 col-form-label">Youtube URL</label>
                        <div class="col-sm-9">
                            <input asp-for="VideoUrl" class="form-control" />
                            <span asp-validation-for="VideoUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 col-form-label card-text"></label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Share</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
